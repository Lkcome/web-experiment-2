@model front11.Models.LoginUserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>学生用户登录</title>
    <link rel="stylesheet" type="text/css" href="/StudentLogin/css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="/StudentLogin/css/demo.css" />
    <link rel="stylesheet" href="/StudentLogin/js/vendor/jgrowl/css/jquery.jgrowl.min.css">
    <link rel="stylesheet" type="text/css" href="/StudentLogin/css/component.css" />
    <!--[if IE]>
    <script src="/StudentLogin/js/html5.js"></script>
    <![endif]-->
    <style>
        input::-webkit-input-placeholder {
            color: rgba(0, 0, 0, 0.726);
        }

        input::-moz-placeholder { /* Mozilla Firefox 19+ */
            color: rgba(0, 0, 0, 0.726);
        }

        input:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
            color: rgba(0, 0, 0, 0.726);
        }

        input:-ms-input-placeholder { /* Internet Explorer 10-11 */
            color: rgba(0, 0, 0, 0.726);
        }

        /* 修改按钮样式 */
        .act-but {
            line-height: 20px; /* 设置按钮内文本的垂直居中 */
            text-align: center;
            font-size: 18px; /* 调整字体大小 */
            border-radius: 25px; /* 圆角 */
            background: #f3984e; /* 按钮背景色 */
            color: #FFFFFF; /* 按钮文字颜色 */
            border: none;
            padding: 12px 40px; /* 调整按钮内部填充 */
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            width: 350px; /* 设置按钮的宽度 */
            max-width: 100%; /* 确保按钮不会超出父容器宽度 */
            height: 40px; /* 设置按钮高度 */
            transition: background 0.3s ease; /* 添加过渡效果 */
        }

            .act-but:hover {
                background: #d68735; /* 悬停背景色 */
                text-decoration: none; /* 去除悬停时的文本装饰 */
            }

        #LOGIN {
            display: flex;
            justify-content: center; /* 居中对齐 */
            margin-top: -30px; /* 调整顶部的间距 */
        }
    </style>
</head>
<body>
    <div class="container demo-1">
        <div class="content">
            <div id="large-header" class="large-header">
                <canvas id="demo-canvas"></canvas>
                <div class="logo_box">
                    <h3>学生用户登录</h3>
                    <form id="loginForm" asp-action="StudentLogin" asp-controller="Account" method="post" onsubmit="return validateForm()">
                        <div class="input_outer">
                            <span class="u_user"></span>
                            <input id="Sid" name="Sid" class="text" style="color: #000000 !important" type="text" placeholder="请输入账户">
                        </div>
                        <div class="input_outer">
                            <span class="us_uer"></span>
                            <input id="Spassword" name="Spassword" class="text" style="color: #000000 !important; position:absolute; z-index:100;" type="password" placeholder="请输入密码">
                        </div>
                        <div id="LOGIN" class="mb2">
                            <button type="submit" class="act-but submit" style="color: #FFFFFF">登录</button>
                        </div>
                    </form>
                    <div id="error-message" class="alert alert-danger mt-3" style="display: none;">
                        <span id="error-text"></span>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /container -->
    <script src="/StudentLogin/js/TweenLite.min.js"></script>
    <script src="/StudentLogin/js/EasePack.min.js"></script>
    <script src="/StudentLogin/js/jquery.js"></script>
    <script src="/StudentLogin/js/rAF.js"></script>
    <script src="/StudentLogin/js/demo-1.js"></script>
    <script src="/StudentLogin/js/vendor/jgrowl/jquery.jgrowl.min.js"></script>
    <script src="/StudentLogin/js/Longin.js"></script>
    <script>
        function validateForm() {
            var username = document.getElementById("Sid").value;
            var password = document.getElementById("Spassword").value;
            if (username === "") {
                $.jGrowl("用户名不能为空！", { header: '提醒' });
                return false; // 阻止表单提交
            } else if (password === "") {
                $.jGrowl("密码不能为空！", { header: '提醒' });
                return false; // 阻止表单提交
            }
            return true; // 允许表单提交
        }
    </script>
</body>
</html>
