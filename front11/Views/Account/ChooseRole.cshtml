@*
Views/Account/ChooseRole.cshtml
*@
@{
    Layout = null; // 不使用全局布局的话
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Choose Role</title>
    <style>
        body {
            background: url('/img/hero-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
        }
        .overlay {
            background: rgba(0, 0, 0, 0.5); /* 添加半透明黑色遮罩层 */
            padding: 50px 0;
            min-height: 100vh;
        }
        .role-selection {
            text-align: center;
            margin: 0 auto;
            padding: 10px 20px -10px 20px; /* 上 右 下 左 */
            /* 调整顶部和底部的 padding */
            background: rgba(255, 255, 255, 0.3); /* 白色半透明背景 */
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 600px; /* 设置最大宽度 */
        }
        .role-card {
            display: inline-block;
            margin: 20px;
            width: 200px;
            cursor: pointer;
            animation: bounce 1s infinite;
            transition: transform 0.2s;
        }
        .role-card img {
            width: 100%;
            border-radius: 10px;
        }
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-20px);
            }
            60% {
                transform: translateY(-10px);
            }
        }
        .role-card:hover {
            animation: none;
            transform: scale(1.05);
        }
        h2 {
            color: white;
        }
    </style>
</head>
<body>
    <div class="overlay">
        <div class="container">
            <h2 class="text-center my-4">Select Your Role</h2>
            <div class="role-selection">
                <form method="post" asp-controller="Account" asp-action="ChooseRole">
                    <div class="role-card" onclick="submitForm('Admin')">
                        <img src="/img/Clove2.jpg" alt="Admin">
                        <h4>Admin</h4>
                    </div>
                    <div class="role-card" onclick="submitForm('Student')">
                        <img src="/img/Clove.jpg" alt="Student">
                        <h4>Student</h4>
                    </div>
                    <input type="hidden" id="role" name="role" value="">
                </form>
            </div>
        </div>
    </div>
    <script>
        function submitForm(role) {
            document.getElementById('role').value = role;
            document.forms[0].submit();
        }
    </script>
</body>
</html>
