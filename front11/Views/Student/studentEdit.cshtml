@using front11.Models;
@model Student
@{
	Layout = "_Layout";
}

<header class="panel-heading">
	<div class="panel-actions">
	</div>

	<h2 class="panel-title">所有学生详细页面</h2>
</header>
<div class="panel-body">
	<form class="form-horizontal form-bordered" method="get" action="@Url.Action("SaveStudent", "Student")">
		<div class="form-group">
			<label class="col-md-3 control-label" for="inputReadOnly">学生ID</label>
			<div class="col-md-6">
				<input type="text" value="@Model?.Sid" name="Sid" id="inputReadOnly" class="form-control" readonly="readonly">
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-3 control-label" for="inputDefault">学生姓名</label>
			<div class="col-md-6">
				<input type="text" value="@Model?.Sname" name="Sname" class="form-control" id="inputDefault">
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-3 control-label" for="inputDefault">学生班级</label>
			<div class="col-md-6">
				<input type="text" value="@Model?.Sclass" name="Sclass" class="form-control" id="inputDefault">
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-3 control-label" for="inputDefault">初始密码</label>
			<div class="col-md-6">
				<input type="text" value="@Model?.Spassword" name="Spassword" class="form-control" id="inputDefault">
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-3 control-label"></label>
			<div class="col-sm-8">
				<div class="row">
					<div class="col-sm-2">
						<button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">保存</button>
					</div>
					<div class="visible-xs mb-md"></div>
					<div class="col-sm-3">
						<button type="button" onclick="location.href='/Student/ShowAllStudent'" class="mb-xs mt-xs mr-xs btn btn-default">返回</button>
					</div>

				</div>

			</div>
		</div>
	</form>
</div>